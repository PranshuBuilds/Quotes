<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/beth"
        android:gravity="center"
        android:onClick="simpleToastClick2"
        android:text="Hello!"
        android:textSize="30dp"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="238dp"
        android:layout_height="43dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/stroke1"
        android:fontFamily="@font/ubuntulight"

        android:gravity="center"
        android:onClick="onClick5"
        android:text="Motivational quotes"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="238dp"
        android:layout_height="43dp"

        android:layout_marginTop="12dp"
        android:onClick="onClick3"

        android:background="@drawable/stroke1"
        android:fontFamily="@font/ubuntulight"
        android:gravity="center"
        android:text="fun quotes"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="238dp"
        android:layout_height="43dp"

        android:layout_marginTop="12dp"
        android:background="@drawable/stroke1"

        android:fontFamily="@font/ubuntulight"
        android:gravity="center"
        android:text="lazy quotes"
        android:onClick="onClick4"

        android:textSize="15dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="238dp"
        android:layout_height="43dp"

        android:layout_marginTop="16dp"
        android:onClick="onClick2"
        android:background="@drawable/stroke1"
        android:fontFamily="@font/ubuntulight"


        android:gravity="center"

        android:text="quotes for mother"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button6"

        android:layout_width="238dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"


        android:background="@drawable/stroke1"
        android:fontFamily="@font/ubuntulight"
        android:gravity="center"
        android:onClick="onClick6"
        android:text="quotes for family"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <View
        android:id="@+id/view"

        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.661" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/robert"
        android:gravity="center"

        android:onClick="onClick1"
        android:text="about"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4"

        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="74dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:onClick="onClick"

        android:layout_marginBottom="8dp"
        android:textColor="@color/red"
        android:fontFamily="@font/robert"
        android:gravity="center"
        android:text="exit"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.625" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="98dp"
        android:layout_height="37dp"
        android:onClick="simpleToastClick"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"

        android:fontFamily="@font/robert"
        android:gravity="center"
        android:text="help"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.62" />

</androidx.constraintlayout.widget.ConstraintLayout>